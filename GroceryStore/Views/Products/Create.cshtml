@model Product
@{
    var Product = (Product)ViewData["Product"];
}
<form asp-action="Create" method="post" class="form-horizontal">


    <div class="form-group">
        <label asp-for="Name">Name</label>
        <div>
            <input asp-for="Name" />
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <div>
            <input asp-for="Price" />
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Image">Image</label>
        <div>
            <input asp-for="Image" type="file" name="ImageFile" />
        </div>
    </div>
   


    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</form>